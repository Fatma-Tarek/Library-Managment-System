@model IEnumerable<AuthorVM>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card m-2">
    <div class="card-header m-2">
        <div class="row">
            <div class="col"> 
                <h2 class="mt-3">Authors Information</h2>
            </div>
                
            
            <div class="col d-flex justify-content-end">
                <a class="btn btn-dark text-end m-2" asp-controller="Author" asp-action="Add">Add Author</a>
            </div>
        </div>
       
        
    </div>
    <div class="card-body">
       
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <thead>
                        <tr>
                            <td style="display:none"></td>
                            <td style="font-weight: 1000">#</td>
                            <th style="font-weight: 1000"  scope="col">Author Name</th>
                            <th style="font-weight: 1000"  scope="col"></th>
                            <th style="font-weight: 1000"  scope="col"></th>

                        </tr>
                    </thead>
                    <tbody>

                        @{
                            var @serial = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="display:none">@item.Id</td>
                                <td>@serial</td>
                                <td>@item.Name</td>

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                                </td>
                                <td>
                                    <button onclick="showDynamicToast('Delete Confirmation',
                                                'Are you sure you want to delete this item?', 'danger',
                                                '@Url.Action("Delete", "Author", new { id = @item.Id })')"
                                            class="btn btn-danger ">
                                        Delete
                                    </button>

                                </td>

                            </tr>
                            serial++;
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>




