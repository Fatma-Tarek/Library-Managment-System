 @model ReturnBooksViewModel


<div class="card m-2">
    <div class="card-header m-2">
        <div class="row">
            <div class="col">
                <h2 class="mt-3">Return Books</h2>
            </div>
            @await Html.PartialAsync("_Alert")

            @await Html.PartialAsync("_SearchForm", Model.MemberList)
        </div>


    </div>
    <div class="card-body">
        <div class="row">


            @if (Model.MemberDetails != null)
            {
                <div class="m-3">
                @await Html.PartialAsync("_MemberDetails", Model.MemberDetails)
                
                </div>
               
                <div>
                @await Html.PartialAsync("_ReturnBookTB", Model.BorrowedBooks)
                </div>
            }
            else
            {
                @if (TempData["Result"] == null)
                {
                    <div class="alert alert-warning" role="alert">
                        Please select a member to view borrowed books.
                    </div>
                }

            }

        </div>

    </div>

    @* <div class="card-footer text-body-secondary">
    <div class="col d-flex justify-content-end">

    </div>
    </div> *@
</div>







      
