@using LMSProjectAUTH.Application.ViewModel.AdminDB
@using LMSProjectAUTH.Application.ViewModel.Cards;
@using LMSProjectAUTH.Application.ViewModel.Book;
@model StatisticVM

@{
    ViewData["Title"] = "Admin Dashboard";
 
}

<div class="card m-2">
    <div class="card-header m-2">
        <h2 class=" mt-3">Admin Dashboard</h2>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <div class="col-4">
                    @Html.Partial("_CardPartial",
                             new CardViewModel
                    {
                        Title = "Borrowed Books",
                        Value = @Model.BorrowedBooks,
                        Icon = "mingcute:book-5-fill",
                        // Icon = "solar:users-group-rounded-bold-duotone",
                        BackgroundColor = "bg-info-subtle"
                    }

                             )
                </div>
                <div class="col-4">
                    @Html.Partial("_CardPartial",
                             new CardViewModel
                    {
                        Title = "Delayed Books",
                        Value = @Model.DelayedBook,
                        BackgroundColor = "bg-danger-subtle",
                        Icon = "si:warning-fill"
                    })
          
                </div>

                <div class="col-4">
                    @Html.Partial("_CardPartial",
                             new CardViewModel
                    {
                        Title = "Total Members",
                        Value = @Model.Membertotol,
                        BackgroundColor = "bg-success-subtle",
                        Icon = "solar:users-group-rounded-bold-duotone"
                    })

                </div>

            </div>
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("_Top5Books", @Model.TopBorrowedBooks)
                </div>
            </div>
            </div>
       
    </div>
</div>

           

